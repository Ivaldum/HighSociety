---
export interface Props {
  title: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
  button1Link: string;
  button2Link: string;
}

const {
  title,
  description,
  imageSrc,
  imageAlt,
  button1Link,
  button2Link,
} = Astro.props;
---
<section class="flex flex-col justify-center items-center mb-20">
  <h2 class="text-white text-4xl font-bold mb-4">{title}</h2>
  <p class="text-white">{description}</p>
  <img src={imageSrc} alt={imageAlt} class="w-full h-auto rounded-lg mb-4" />
  <div class="mt-4">
    <a href={button1Link} class="mr-4 px-4 py-2 bg-slate-500 text-white rounded hover:bg-fuchsia-600">Mas informacion</a>
    <a href={button2Link} class="px-4 py-2 bg-slate-500 text-white rounded hover:bg-fuchsia-600">Comprar entrada</a>
  </div>
</section>