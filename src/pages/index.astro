---
import Layout from "../layouts/Layout.astro";
import NuestrosDjs from "../components/NuestrosDjs.astro";
import Header from "../components/Header.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Eventos from "../components/Eventos.astro";
import SectionSpoty from "../components/SectionSpoty.astro";
import NextEvent from "../components/NextEvent.astro"
---

<Layout title="High Society">
  <main class="px-4">
    <SectionContainer id="nosotros" class="py-8 md:py-16">
      <Header />
    </SectionContainer>
  </main>
  <div>
    <SectionContainer id="djs">
      <div class="flex flex-col justify-center items-center gap-8">
        <h2 class="text-4xl text-white">Proximos eventos</h2>
        <div class="flex flex-row gap-6">
          <NextEvent title="After Club" description="Flow 2000" imageAlt="imagen flow 2000" imageSrc="flow2000.jpg" button1Link="http://www.instagram.com/highsociety.ar" button2Link="https://www.passline.com/eventos?q=high+society&region=&mes=&pais=argentina&page=1"/>
          <NextEvent title="Flow 2000" description="Flow 2000" imageAlt="imagen After club" imageSrc="flow2000.jpg" button1Link="http://www.instagram.com/highsociety.ar" button2Link="https://www.passline.com/eventos?q=high+society&region=&mes=&pais=argentina&page=1"/>
        </div>
      </div>
    </SectionContainer>
    <SectionContainer id="djs">
      <NuestrosDjs />
    </SectionContainer>
    <SectionContainer id="eventos">
      <Eventos />
    </SectionContainer>
    <SectionContainer id="spotify">
      <SectionSpoty />
    </SectionContainer>
  </div>
</Layout>
